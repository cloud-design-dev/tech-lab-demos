# IBM Cloud Code Engine Environment Variables Example
# Copy this to your Code Engine application configuration

# Required: IBM Cloud Databases for PostgreSQL connection (JSON format)
# Get this from: ibmcloud resource service-key your-postgres-key
DATABASES_FOR_POSTGRESQL_CONNECTION='{
  "connection": {
    "postgres": {
      "authentication": {
        "method": "direct",
        "password": "your-postgres-password", # pragma: allowlist secret
        "username": "your-postgres-username"
      },
      "certificate": {
        "certificate_base64": "LS0tLS1CRUdJTi0tLS0t...", # pragma: allowlist secret
        "name": "your-certificate-name"
      },
      "database": "ibmclouddb",
      "host": "your-host.databases.appdomain.cloud",
      "port": 5432
    }
  }
}'

# Required: IBM Cloud API credentials for user validation
IBM_CLOUD_API_KEY=your_ibm_cloud_api_key_here # pragma: allowlist secret
IBM_CLOUD_ACCOUNT_ID=your_ibm_cloud_account_id_here

# Required: Application security
FLASK_SECRET_KEY=your-secure-secret-key-for-sessions
ADMIN_PASSWORD=your-admin-dashboard-password

# Optional: Application configuration
PORT=8080
